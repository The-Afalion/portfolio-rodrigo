generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELOS GENERALES ---

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tag[]
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  posts Post[]
}

// --- MODELOS DE AJEDREZ ---

model ChessUser {
  id           String   @id @default(cuid())
  username     String   @unique
  password     String   // Hash de la contrase√±a
  elo          Int      @default(1000)
  botsDefeated String[] // Array de IDs de bots vencidos
  createdAt    DateTime @default(now())
  games        ChessGame[]
}

model ChessGame {
  id        String   @id @default(cuid())
  userId    String
  user      ChessUser @relation(fields: [userId], references: [id])
  botId     String
  result    String   // "win", "loss", "draw"
  moves     String   // PGN o lista de movimientos
  playedAt  DateTime @default(now())
}

// --- MODELOS ANTIGUOS (Mantenidos por compatibilidad si se usan) ---

model ChessPlayer {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  isAI         Boolean @default(false)
  profileIcon  String?
  personality  String?
  elo          Int @default(1200)
  winsDaily    Int @default(0)
  winsWeekly   Int @default(0)
  winsMonthly  Int @default(0)
  winsTotal    Int @default(0)
  assignedSide String?
  // Relaciones omitidas para simplificar, ya que usaremos ChessUser
}
